{
  "version": 2,
  "routes": [
    {
      "src": "/api/telegram",
      "methods": ["POST"],
      "dest": "/api/telegram.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "functions": {
    "api/telegram.js": {
      "maxDuration": 30,
      "memory": 256
    },
    "api/**/*.js": {
      "maxDuration": 10,
      "memory": 256
    }
  },
  "env": {
    "BOT_TOKEN": "@BOT_TOKEN",
    "BOT_SECRET": "@BOT_SECRET",
    "MONGO_URI": "@MONGO_URI",
    "ADMIN_CHAT_ID": "@ADMIN_CHAT_ID",
    "WEBHOOK_SECRET": "@WEBHOOK_SECRET"
  }
}
